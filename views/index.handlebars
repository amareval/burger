<h1 class="text-center">Eat Da Burger!</h1>

<h3 class="text-center">Eat that shit dog!</h3>

<div class="container">

    <div class="row">
        <div class="col-6 align-center" id="notEaten">
            <ul>
                {{#each burgers}}
                <li>
                    <p>ID: {{this.id}}</p>
                    <p>Burger Name: {{this.burger_name}}</p>
                    <button type="submit" name = "devour" class="devour-burger" data-id="{{this.id}}">I'M EATIN</button>

                </li>
                {{/each}}
            </ul>
        </div>
        <div class="col-6" id="eaten">

        </div>
    </div>
    <form action="/" method="POST" class="text-center" id="addingburgers">
        <textarea type="text" name="burger" class="align-center"></textarea>

        <button type="submit" id="submitbutton">Submit</button>
    </form>
</div>